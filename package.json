{
  "name": "@restorecommerce/acs-client",
  "version": "0.2.22",
  "description": "Access Control Service Client",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/acs-client"
  },
  "license": "MIT",
  "keywords": [
    "ACS",
    "access",
    "control",
    "service",
    "client"
  ],
  "main": "./lib/index.js",
  "dependencies": {
    "@restorecommerce/grpc-client": "0.0.8",
    "@restorecommerce/kafka-client": "^0.1.13",
    "@restorecommerce/logger": "^0.4.0",
    "@restorecommerce/protos": "0.0.16",
    "@restorecommerce/service-config": "^0.3.2",
    "ioredis": "^4.19.2",
    "lodash": "^4.17.20",
    "node-eval": "^2.0.0"
  },
  "devDependencies": {
    "@types/koa": "^2.11.6",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.8",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "optionalDependencies": {
    "redis": "^2.8.0"
  },
  "scripts": {
    "build:tsc": "tsc -d",
    "build:tsc:watch": "tsc -d --watch",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "lint": "eslint src --ext .ts",
    "pretest": "npm run build && npm run createtopics && npm run tsctests",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha && nyc npm run mocha:cache",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "mocha:cache": "cross-env NODE_ENV=test CACHE_ENABLED=true mocha -R spec ./test/*.js --full-trace --exit",
    "test-debug": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --inspect-brk",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "createtopics": "node setupTopics.js io.restorecommerce.rules.resource io.restorecommerce.policies.resource io.restorecommerce.policy_sets.resource"
  }
}
