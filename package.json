{
  "name": "@restorecommerce/acs-client",
  "version": "0.1.4",
  "description": "Access Control Service Client",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/acs-client"
  },
  "license": "MIT",
  "keywords": [
    "ACS",
    "access",
    "control",
    "service",
    "client"
  ],
  "main": "./lib/index.js",
  "dependencies": {
    "@restorecommerce/grpc-client": "^0.0.5",
    "@restorecommerce/kafka-client": "^0.1.8",
    "@restorecommerce/logger": "^0.1.12",
    "@restorecommerce/protos": "^0.0.2",
    "@restorecommerce/service-config": "^0.1.4",
    "lodash": "^4.17.15",
    "node-eval": "^2.0.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.49",
    "@types/lodash": "^4.14.138",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@types/redis": "^2.8.13",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^7.0.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^2.6.3",
    "should": "^13.2.3",
    "tslint": "^5.18.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "optionalDependencies": {
    "redis": "^2.8.0"
  },
  "scripts": {
    "build:tsc": "tsc -d",
    "postinstall": "tsc -d",
    "build:tsc:watch": "tsc -d --watch",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "lint": "eslint src --ext .ts",
    "pretest": "npm run build && npm run createtopics && npm run tsctests",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test": "npm run lint && nyc npm run mocha && nyc npm run mocha:cache",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "mocha:cache": "cross-env NODE_ENV=test CACHE_ENABLED=true mocha -R spec ./test/*.js --full-trace --exit",
    "test-debug": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --inspect-brk",
    "createtopics": "node setupTopics.js io.restorecommerce.rules.resource io.restorecommerce.policies.resource io.restorecommerce.policy_sets.resource"
  }
}
